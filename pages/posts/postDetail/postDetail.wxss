page{
	height: 100%;
	width: 100%;
	margin: 0;
	padding: 0;
}

.music{
	width: 120rpx;
	height: 110rpx;
	position: absolute;
	left: 50%;
	margin-left: -60rpx;
	top: 50%;
	margin-top: -55rpx;
	opacity: 0.6;
}

.container{
	padding: 10rpx 20rpx;
	display: flex;
	flex-direction: column;
	box-sizing: border-box;
	width: 100%;
}

/* 头部信息 */

.head{
	width: 100%;
	display: flex;
	flex-direction: row;
	align-items: center;
}

.author,.time{
	font-size: 28rpx;
	margin-left: 5%;
	color: rgb(121,121,121);
}

.myTitle{
	line-height: 34rpx;
	font-size: 34rpx;
	margin-bottom: 10rpx;
}

/* 分隔栏 */
.collect{
	display: flex;
	flex-direction: row;
	justify-content: flex-end;
	width: 100%;
	margin-bottom: 10rpx;
}

.collect>image{
	width: 76rpx;
	height: 64rpx;
}

/* 注意选择器的优先级问题 */
.collect>.unCollect{
	position: relative;
	top:-2rpx;
	height: 74rpx;
}

/* 线 */
.line{
	width: 100%;
	height: 1px;
	background-color: rgb(239,239,239);
	position: relative;
	top:-45rpx;
	z-index: -1;
}

.artical{
	font-size: 30rpx;
	color: rgb(66,66,66);
	text-indent: 60rpx;
	line-height: 40rpx;
	letter-spacing: 2px;
}